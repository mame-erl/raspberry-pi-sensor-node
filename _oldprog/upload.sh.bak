#!/bin/bash
pfad="/home/pi/programme/"
programm="temp_hyg_photo"
url="https://api.thingspeak.com/update?api_key=L6TFDMAXO7TD9DHF&"

ergebnis="$(sudo $pfad$programm)"
wert1="$(echo $ergebnis | cut -d / -f 1)"
wert2="$(echo $ergebnis | cut -d / -f 2)"
wert3="$(echo $ergebnis | cut -d / -f 3)"

feld1="field1=$wert1"
feld2="&field2=$wert2"
feld3="&field3=$wert3"

gesamturl="$url$feld1$feld2$feld3"

curl "$gesamturl"
